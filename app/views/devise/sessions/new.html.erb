<div class="container">

  <h2><font color="#7FDBDA">Connectez-vous!</font color></h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  autofocus: true, label:"Mot de passe",
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, autofocus: true, label:"Se souvenir de moi",as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Connexion", class:"btn-create" %>
    </div>
  <% end %>

  <%= link_to "Retour", root_path, class:"btn btn-outline-secondary" %>

</div>

