<div class="container">
  <h2><font color="#7FDBDA">Inscrivez-vous!</font color></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required:true,
                  autofocus: true, placeholder: "Anna", label: "Prénom" %>
      <%= f.input :last_name,
                  required:true,
                  autofocus: true, placeholder: "Burgein", label: "Nom" %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, placeholder: "a.burgein@buoys.com"%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" }, placeholder: "******", label: "Mot de passe" %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" }, placeholder: "******", label: "Mot de passe à confirmer" %>
      <%= f.input :photo, as: :file %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "S'inscrire", class:"btn-create" %>
    </div>
  <% end %>

    <%= link_to "Retour", root_path, class: "btn btn-outline-secondary" %>
</div>


