<div class="container">
  <h1>Details of the buoy you selected</h1>
  <br>
  <div class="page">
    <div class="card-product">
      <% if @buoy.photo.attached? %>
        <%= image_tag @buoy.photo, alt: "bou√©e", width: 300, heigth: 200, crop: :fit %>
      <% end %>
      <div class="card-product-infos">
        <h2><%= @buoy.name %></h2>
        <p>üìç <%= @buoy.address %></p>
        <p><%= @buoy.description %></p>
        <p>Pour: <%= @buoy.person_number %> üôé</p>
        <p>Prix (1/2 journ√©e): <%= @buoy.price %><i class="fas fa-euro-sign"></i></p>
        <%= link_to "üîô", buoys_path, class: "btn-create" %>
      </div>
    </div>

    <div class="buoy-booking">
      <div class="form">
        <h4>Book this buoy !</h4>
        <%= simple_form_for ([@buoy, @booking]) do |f| %>
        <%= f.input :start_date, as: :date %>
        <%= f.input :end_date, as: :date %>
        <%= f.submit "Book", class: "btn-create", id: "book" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Booking informations</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>You are going to book the <%= @buoy %>from start-date to end-date, for <%= @buoy.price %> euros</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          <%= link_to "Cancel", buoy_path(@buoy)%></button>
        <button type="button" class="btn btn-primary">
        <%= link_to "Confirm your booking", buoy_path(@buoy) %>
        </button>
      </div>
    </div>
  </div>
</div>
