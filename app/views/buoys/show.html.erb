<div class="container">
  <h1><%= @buoy.name.capitalize %></h1>
  <br>
  <div class="page">
    <div class="card-product">
      <% if @buoy.photo.attached? %>
        <%= image_tag @buoy.photo, alt: "bouée", width: 300, heigth: 200, crop: :fit %>
      <% end %>
      <div class="card-product-infos">
        <h2><%= @buoy.name %></h2>
        <p>📍 <%= @buoy.address %></p>
        <p><%= @buoy.description %></p>
        <p>Pour: <%= @buoy.person_number %> 🙎</p>
        <p>Prix (/jour): <%= @buoy.price %><i class="fas fa-euro-sign"></i></p>
        <%= link_to "🔙", buoys_path, class: "btn-create" %>
      </div>
    </div>

    <div class="container">
      <div class="form-wrapper">
        <h4>Reserve ta bouée !</h4>
        <%= simple_form_for [@buoy, @booking] do |f| %>
        <%= f.input :start_date, label: "Sélectionnez vos dates:", as: :string, required: false, input_html: {id: "range_start", class: "d-none" } %>
        <%= f.input :end_date, label: false, as: :string, required: false, input_html: {id: "range_end", class: "d-none" } %>
        <%= f.button :submit, "Réserve", class: "btn-create" %>
        <% end %>
      </div>
    </div>
    <div
      id="booking-form-div"
      data-bookings="<%= @bookings_dates.to_json %>"
    >
  </div>
</div>
